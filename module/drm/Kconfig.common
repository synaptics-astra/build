	select GATEKEEPER_TA
	select DRM_COMMON
	bool "Gatekeeper"
	default y

config GATEKEEPER_TA
	depends on ANDROID_OS
	bool
	default y

config GTVCA
	bool "Enable gtvca"
	default n

config GTVCALITE
	bool "Enable gtvcalite"
	default n

config GTVCALITE_TEST
	bool "Enable gtvcalite_test"
	default n

config PLAYREADY_VER_32
	bool "Playready 3.2"
	select PR_SYNA_CA
	select PR_SYNA_TA
	select DRM_COMMON

config PLAYREADY_VER_40
	bool "Playready 4.0"
	select PR_SYNA_CA
	select PR_SYNA_TA
	select DRM_COMMON
	select DRM_PR_TEST

config PR_SYNA_CA
	bool
	depends on PLAYREADY_VER_32 || PLAYREADY_VER_40

config PR_SYNA_TA
	bool
	depends on PLAYREADY_VER_32 || PLAYREADY_VER_40

if VSSDK_RELEASE
config BUILD_PRPK_SOURCE
	depends on PLAYREADY_VER_32 || PLAYREADY_VER_40
	bool "Build from Source"
	default n
endif

config DRM_TEST
