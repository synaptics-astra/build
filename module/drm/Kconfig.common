	bool "OTP program"
	default n

config READ_RKEKID
	bool "read rkekid"
	default n

config KM_TEST
	bool "keymaster api test"
	default n

config LOAD_HDCP
	bool "load HDCP"
	default n

config FACTORY_UTIL
	bool "factory util"
	default n

config OEM_COMMAND
        bool "oem command tool"
        default y if GENX_ENABLE

config DRM_GENCRYPTO_TEST
	bool "gencrypto api test"
	default n

